<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/news_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/simple_padding"
        android:paddingLeft="@dimen/double_padding"
        android:paddingRight="@dimen/double_padding"
        android:paddingTop="@dimen/double_padding"
        android:textAppearance="?android:textAppearanceMedium"
        tools:text="News Section"/>

    <TextView
        android:id="@+id/news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/simple_padding"
        android:textAppearance="?android:textAppearanceLarge"
        tools:text="News Title"/>

    <TextView
        android:id="@+id/news_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="@dimen/simple_padding"
        android:textAppearance="?android:textAppearanceSmall"
        tools:text="News Author"/>

    <TextView
        android:id="@+id/news_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingBottom="@dimen/double_padding"
        android:paddingLeft="@dimen/simple_padding"
        android:paddingRight="@dimen/simple_padding"
        android:paddingTop="@dimen/simple_padding"
        android:textAppearance="?android:textAppearanceSmall"
        tools:text="News Date"/>

</LinearLayout>